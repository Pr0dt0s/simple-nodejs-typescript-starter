{
  "compileOnSave": true,
  "buildOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./_tsCompilation",
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "_tsCompilation",
    "typings/index",
    "typings/index.d.ts"
  ]
}
