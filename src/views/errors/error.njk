{% extends '../index.njk' %}

{% block title %}Error Page{% endblock %}

{% block content %}
  <div class="container">
    <h1>Sorry</h1>
    <p>An error occured</p>
  </div>

  {% if show %}
    <div>
      <p>Error: {{ message }}</p>
      <p>Stack: {{ error.stack }}</p>
  </div>
  {% endif %}
{% endblock %}
